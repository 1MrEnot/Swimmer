@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<TimerComponent @ref="_timerComponent" OnStop="@OnStop"></TimerComponent>
<button @onclick="() => _timerComponent.StartFrom(DateTime.Now - TimeSpan.FromSeconds(5))"> Start from 5 sec ago</button>


@code{
    private TimerComponent _timerComponent = null!;
    
    private void OnStop(DateTime dateTime, TimeSpan span)
    {
        Console.WriteLine($"Stopped at {dateTime}. Elapsed {span}");
    }
}